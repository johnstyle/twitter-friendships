#!/usr/bin/env php
<?php

use Core\Console;
use Core\TwitterApi;
use Model\Actions\Unfollowed;
use Model\User;

/** @var TwitterApi $api */
$api = include __DIR__ . '/../bootstrap.php';

Console::header('Unfollow users');

$users = User::getUserToUnfollow();

if (null === $users
    || 0 === $users['count']) {

    return;
}

$nowDate = (new \DateTime())->format('Y-m-d');

Unfollowed::load();

foreach ($users['items'] as $userId => $user) {

    Console::log($user);

    Unfollowed::sync([
        'id'   => $user['id'],
        'date' => $nowDate
    ]);

    // Unfollow
    $api->post('friendships/destroy', [
        'user_id' => $user['id'],
    ]);
    sleep(1);
}

Unfollowed::save();

Console::total($users['count'], $users['total']);
